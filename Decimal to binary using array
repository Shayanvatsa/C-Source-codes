#include <stdio.h>
void main() 
{
    int a[10], number, i, j;
    printf("Enter the Number You want to Convert=");
    scanf("%d", &number);
    for(i = 0; number > 0; i++)
    {
        a[i] = number % 2;
        number = number / 2;
    }
    printf("\n Binary Number of the given number=");
    for(j = i - 1; j >= 0; j--) 
    {
        printf(" %d ", a[j]);
    }
    printf("\n");
}
