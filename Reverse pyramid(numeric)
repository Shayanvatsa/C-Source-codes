#include <stdio.h>
void main()
{
    int i,n,k,counter=1,j;
    printf("Enter the number of rows= ");
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        for(j=0; j<=i; j++)
        {
            printf(" ");
        }
        for(k=n; k>=i; k--)
        {
            printf("%d ",counter);
        }
        counter++;
        printf("\n");
    }
}
