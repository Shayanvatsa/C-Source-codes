#include <stdio.h>
void main()
{
    int i,j,n,k;
    printf("enter number of times=");
    scanf("%d",&n);
    for(i=n;i>=1;i--)
    {
        for(j=1;j<i;j++)
        {
            printf(" ");
        }
        for(k=n;k>=i;k--)
        {
            printf("*");
        }
        printf("\n");
    }
}
